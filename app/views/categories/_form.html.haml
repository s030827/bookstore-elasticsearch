= form_for @category, html: {class: "general-form"} do |f|
  - if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - @category.errors.full_messages.each do |message|
          %li= message
  .form-group.mb-30
    = f.label :name, class: "control-label input-label"
    = f.text_field :name, class: "form-control"
  .actions.text-center
    = f.submit 'Save', class: "btn btn-default mb-20"
