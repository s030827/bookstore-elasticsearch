%h1.text-center Listing authors
.table-responsive
  %table.table
    %thead
      %tr
        %th.col-sm-1
        %th.col-sm-2 First name
        %th.col-sm-2 Last_name
        %th.col-sm-4 Description
        %th.col-sm-3

    %tbody
      - @authors.each do |author|
        %tr
          %td
            .form-group.checkbox
              %label.checkbox-label
                %input.checkbox-input{type: "checkbox", hidden: "true"}
                %span.checkbox-icon
                  %i.fa.fa-check
                %span.checkbox-text
          %td= author.first_name
          %td= author.last_name
          %td= author.description
          %td
            = link_to 'Edit', edit_author_path(author), class: "font-16 in-gold-500"
            %span.font-16.in-gold-500 
              \|
            = link_to 'Delete', author, method: :delete, data: { confirm: 'Are you sure?' }, class: "font-16 in-gold-500"

.text-center
  = link_to 'Create', new_author_path, class: "btn btn-default mb-20"
