= form_with(model: [ @book, @book.reviews.build ]) do |form|
  .form-group
    = form.hidden_field :user_id, value: current_user.id
  .form-group.mb-30
    = form.label        :rating, class: "control-label input-label"
    = form.number_field :rating, class: "form-control"
  .form-group.mb-30
    = form.label        :title,  class: "control-label input-label"
    = form.text_field   :title,  class: "form-control"
  .form-group.mb-30
    = form.label        :text,   class: "control-label input-label"
    = form.text_area    :text,   class: "form-control", size: "60x6"
  .actions
    = form.submit 'Post',        class: "btn btn-default mb-20"
