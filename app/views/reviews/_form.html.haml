= form_for @review, html: {class: "general-form"} do |f|
  - if @review.errors.any?
    #error_explanation
      %h2= "#{pluralize(@review.errors.count, "error")} prohibited this review from being saved:"
      %ul
        - @review.errors.full_messages.each do |message|
          %li= message
  .form-group.mb-30
    = f.label :title, class: "control-label input-label"
    = f.text_field :title, class: "form-control"
    = f.label :rating, class: "control-label input-label"
    = f.number_field :rating, class: "form-control"
  .form-group.mb-30
    = f.label :text, class: "control-label input-label"
    = f.text_area :text, size: "60x6", class: "form-control"
  .actions
    = f.submit 'Save', class: "btn btn-default mb-20"
