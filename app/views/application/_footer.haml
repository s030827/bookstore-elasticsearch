%footer.navbar-inverse
  .container
    .row
      .col-sm-9
        %ul.list-inline.general-align.mb-25
          %li
            = link_to "Home", root_path, class: "nav-link"
          %li
            = link_to "Shop", catalog_path, class: "nav-link"
          - if user_signed_in?
            %li
              = link_to "Orders", orders_path, class: "nav-link"
            %li
              = link_to "Settings", settings_addresses_path, class: "nav-link"
      .col-sm-3
        %p.general-nav-mail
          = mail_to 'support@bookstore.com', 'support@bookstore.com', class: 'general-nav-mail'
        %p.general-nav-number
          = link_to '(555)-555-5555', 'tel:5555555555', class: 'general-nav-number'
        %ul.list-inline.general-align
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-facebook{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-twitter{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-google-plus{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-instagram{'aria-hidden': "true"}
