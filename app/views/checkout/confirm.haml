%main.container.general-main-wrap
  %h1.general-title-margin Checkout
  = render 'steps'
  .row.mb-20
    .col-sm-3
      %h3.general-subtitle Shipping Address
      %p.general-address
        = "#{current_order.shipping.first_name} #{current_order.shipping.last_name}"
        = link_to "edit", checkout_path(:addresses), class: "general-edit"
        %br
        = current_order.shipping.address
        %br
        = "#{current_order.shipping.city} #{current_order.shipping.zip}"
        %br
        = current_order.shipping.country
        %br
        = "Phone #{current_order.shipping.phone}"
    .col-sm-3
      %h3.general-subtitle Billing Address
      %p.general-address
        = "#{current_order.billing.first_name} #{current_order.billing.last_name}"
        = link_to "edit", checkout_path(:addresses), class: "general-edit"
        %br
        = current_order.billing.address
        %br
        = "#{current_order.billing.city} #{current_order.billing.zip}"
        %br
        = current_order.billing.country
        %br
        = "Phone #{current_order.billing.phone}"
    .col-sm-3
      %h3.general-subtitle Shipments
      %p.general-address
        = current_order.delivery.name
        = link_to "edit", checkout_path(:delivery), class: "general-edit"
        %br
        = current_order.delivery.time
    .col-sm-3
      %h3.general-subtitle Payment Information
      %p.general-address
        = "**** **** **** #{current_order.credit_card.number.last(4)}"
        = link_to "edit", checkout_path(:payment), class: "general-edit"
        %br
        = current_order.credit_card.month_year
  .visible-xs
    .general-cart-item.divider-lg
      .general-img-wrap-table
        %img.cart-img-shadow{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
      %p.title Android Programming for Beginners
      %P.in-grey-600.fw-300 A recipe-based book to help you efficiently create amazing PHP-based applications with Laravel 5.x
      %table.table
        %tr
          %td
            %span.in-grey-600 Price
          %td
            %span.font-16.in-gold-500 €28.50
        %tr
          %td.vertical-middle
            %span.in-grey-600 Quantity
          %td
            %span 1
        %tr
          %td
            %span.in-grey-600 SubTotal
          %td
            %span.font-16.in-gold-500 €32.90
    .general-cart-item.divider-lg.mb-55
      .general-img-wrap-table
        %img.cart-img-shadow{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
      %p.title Android Programming for Beginners
      %table.table
        %tr
          %td
            %span.in-grey-600 Price
          %td
            %span.font-16.in-gold-500 €28.50
        %tr
          %td.vertical-middle
            %span.in-grey-600 Quantity
          %td
            .input-group
              %a.input-link{href: "#"}
                %i.fa.fa-minus.line-heaght-40
              %input.form-control.quantity-input{type: "text"}
              %a.input-link{href: "#"}
                %i.fa.fa-plus.line-heaght-40
        %tr
          %td
            %span.in-grey-600 SubTotal
          %td
            %span.font-16.in-gold-500 €32.90
  .hidden-xs.divider-lg.pt-20
    %table.table.table-hover
      %thead
        %tr
          %th
            %span.in-grey-600 Book
          %th.col-method
          %th
            %span.in-grey-600 Price
          %th
            %span.in-grey-600 Quantity
          %th
            %span.in-grey-600 Total
      %tbody
        - current_order.order_items.each do |order_item|
          %tr
            %td
              .general-img-wrap-table
                %img.cart-img-shadow.pull-left{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
            %td
              %p.title= order_item.book.title
              %p.in-grey-600.fw-300 Maximize the potential of Bootstrap with a collection of real-world site projects for better, faster, more responsive web applications
            %td
              %span.font-16.in-gold-500= number_to_euro order_item.book.price
            %td
              %span.ml-30= order_item.quantity
            %td
              %span.font-16.in-gold-500= number_to_euro order_item.total
  .text-center.general-text-right
    %p.in-gold-500.font-18 Order Summary
    %table.general-summary-table.general-summary-table-right.general-text-right
      = render 'order_summary'
  .text-center
    = button_to "Place Order", wizard_path, method: :put, class: 'btn btn-default mb-20'
